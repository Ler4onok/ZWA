{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/comment.css') }}"/>
{% endblock %}

{% block body %}


<div class="container_review">
    <div class="info_doctor">
        <div class="name_doctor">
            <h2></h2>
        </div>
        <div class="img_doctor" id="review_doc_logo">
            <img src="{{ asset('images/doc3.jpg') }}" alt="logo_doctor" class="logo_doctor">
        </div>
        <div class="text_doctor">
                <p>as;jdas;fjalkfhsfljasfhshfkhafkjsdhfkdshfkashlfksdf
                as;jdas;fjalkfhsfljasfhshfkhafkjsdhfkdshfkashlfksdf
